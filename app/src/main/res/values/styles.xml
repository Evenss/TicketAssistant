<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- No Title theme. -->
    <style name="AppThemeNoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>

    <style name="activityAnim">
        <!--当前活动开启的时候所调用的动画-->
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <!--进入一个新的活动时  当前活动消失所调用的动画-->
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <!--回到前一个活动时 前一个活动调用的动画-->
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <!--当前活动结束时调用的动画-->
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

</resources>
